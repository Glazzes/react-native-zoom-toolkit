{
  "git": {
    "requireBranch": "main",
    "requireCleanWorkingDir": false,
    "commitMessage": "chore: release ${version}",
    "tagName": "v${version}"
  },
  "hooks": {
    "before:init": ["yarn lint", "yarn test", "yarn prepare"],
    "after:release": ["rm -rf lib"]
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": true
  }
}
